#include<iostream>
using namespace std;
int largest(int arr[],int n)
{
    int max=arr[0];
    for(int i=0;i<=n;i++)
    {
        if(arr[i]>max)
        {
            max=arr[i];
        }
        
    }
    return max;
    
}

int main()
{
    int arr[]={1,2,6,77,8};
    int n=sizeof(arr)/sizeof(arr[0]);
    cout<<"largest element of the array "<<largest(arr,n);
   
}
