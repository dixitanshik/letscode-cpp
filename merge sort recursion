#include<iostream>
#include<vector>
using namespace std;

void merge(int arr[],int si,int mid,int ei)
{
    vector<int> temp;
    int i=si;
    int j=mid+1;
    while(i<=mid&&j<=ei)
    {
        if(arr[i]<arr[j])
        {
            temp.push_back(arr[i]);
            i++;
        }
        else
        {
            temp.push_back(arr[j]);
            j++;
        }
        while(i<=mid)
        {
            temp.push_back(arr[i]);
            i++;

        }
         while(j<=ei)
        {
            temp.push_back(arr[j]);
            j++;

        }
    }
    //copy vector to original array 
    for(int indx =si, x=0;indx<=ei;i++)
    {
        arr[indx]=temp[x++];

    }


}

void mergesort(int arr[],int si,int ei)
{
    int mid=(si+ei)/2;
    if(si>=ei)
    {
        return;
    }
    mergesort(arr,si,mid);
    mergesort(arr,mid+1,ei);//left half
    merge(arr,si,mid,ei);//right half 


}
void printarr(int arr[],int n)
{
    for(int i=0;i<n;i++)
    {
        cout<<arr[i]<<" ";
    }
    cout<<endl;
}

int main()
{
    int arr[6]={1,8,5,4,11,9};
    int n=6;
    mergesort(arr,0,n-1);
}
